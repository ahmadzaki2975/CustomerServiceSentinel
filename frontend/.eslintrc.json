{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "next",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 2],
    "linebreak-style": ["off"],
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "no-console": ["warn"]
  }
}

